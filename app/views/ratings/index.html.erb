<h1>Ratings</h1>

<div class="row">
  <div class="col-sm-4">
    <h3>Best beers</h3>
    <%= render 'list', records: @top_beers %>
  </div>

  <div class="col-sm-4">
    <h3>Best breweries</h3>
    <%= render 'list', records: @top_breweries %>
  </div>
</div>

<p></p>
<h3>Top raters</h3>

  <table class='table-striped'>
    <thead>
      <tr>
        <th>Username</th>
        <th>Ratings</th>
      </tr>
    </thead>

    <tbody>
      <% @top_raters.keys.each do |rater| %>
        <tr>
          <td><%= rater %></td>
          <td><%= @top_raters[rater] %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

<p></p>
<h3>Most recent ratings</h3>

<ul>
  <% @recent.each do |rating| %>
    <li> <%= link_to rating.beer.name, rating.beer %> <span class="badge"><%= rating.score %></span>
      by <%= link_to rating.user.username, rating.user %> at <%= rating.created_at %> </li>
  <% end %>
</ul>
