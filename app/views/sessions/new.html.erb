<h1>Sign in</h1>

<%= form_tag session_path, class: "form-inline" do %>
  <div class="form-group">
    <strong>username:</strong>
    <%= text_field_tag :username, params[:username], class: "form-control" %>
  </div>
  <div class="form-group">
    <strong>password:</strong>
    <%= password_field_tag :password, params[:password], class: "form-control" %>
  </div>
  <%= submit_tag "Log in" %>
<% end %>