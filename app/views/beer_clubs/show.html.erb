
<h1><%= @beer_club.name %></h1>

<p>
  <strong>Founded:</strong>
  <%= @beer_club.founded %>
</p>

<p>
  <strong>City:</strong>
  <%= @beer_club.city %>
</p>

<h3>Members</h3>
<ul>
  <% @beer_club.members.each do |member| %>
    <li>
      <%= link_to member.username, users_path(member) %>
    </li>
  <% end %>
</ul>

<% if current_user %>
  <% if !current_user.already_a_member(@beer_club) %>
    <h4>Join:</h4>

    <%= form_for(@membership) do |f| %>
      <%= f.hidden_field :beer_club_id %>
      <%= f.submit value:"Join #{@beer_club.name}" %>
    <% end %>
  <% end %>

  <%= link_to 'Edit', edit_beer_club_path(@beer_club) %> 
  <%= link_to 'Destroy', @beer_club, method: :delete, data: { confirm: 'Are you sure?' } %>
<% end %>