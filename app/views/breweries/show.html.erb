
<h2>
	<%= @brewery.name %>
	<% if not @brewery.active  %>
    <span class="badge badge-danger">retired</span>
  <% end %>
</h2>

<p>
  <i>
	Established in <%= @brewery.year %>
  </i>
</p>

<p>
	Beer counter: <%= @brewery.beers.count %>
</p>

<p>
	<% @brewery.beers.each do |beer| %>
		<%= link_to beer.name, beer %>
	<% end %>
</p>

<p>
	Has <%= pluralize(@brewery.ratings.count, 'rating') %>
	<% if !@brewery.ratings.empty? %>
		, average <span class="badge"><%= round(@brewery.average_rating) %></span>
	<%end%>
</p>

<% if current_user %>
	<%= link_to 'Edit', edit_brewery_path(@brewery) %> |
	<%= link_to 'Destroy', @brewery, method: :delete, data: { confirm: 'Are you sure?' }, class:'.btn-sm btn-danger' %> |
<% end %>	
<%= link_to 'Back', breweries_path %>
