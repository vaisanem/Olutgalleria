
<h1>Users</h1>

<table class='table-striped'>
  <thead>
    <tr>
      <th> Username </th>
      <th> Rated beers </th>
      <th> Ratings </th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= link_to user.username, user %></td>
        <td><%= user.beers.size %></td>
        <td><%= user.ratings.size %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
